{
  "name": "ringdingdong",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "pretter --write \"**/*.{ts,tsx,md}\"",
    "client": "pnpm --filter @ringdingdong/client",
    "dev-app": "pnpm --filter @ringdingdong/dev-app",
    "slack-server": "pnpm --filter @ringdingdong/slack-server",
    "eslint": "pnpm --filter @ringdingdong/eslint-config",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "husky": "^9.0.7",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
