{
  "extends": "@ringdingdong/tsconfig/base.json",
  "include": ["src", "public/dev"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
