{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "../../",
    "paths": {
      "@client/*": ["packages/client/src/*"],
      "@slack-server/*": ["packages/slack-server/src/*"],
      "@dev-app/*": ["packages/dev-app/src/*"],
    }
  }
}
